<!DOCTYPE html>
<html>
  	<head>
  	<meta charset="utf-8">
  	<link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/shopping.css" rel="stylesheet">
  	</head>
  	<body>
  	    <div id="wrapper">
 {% include 'category_menu.html.twig' %}
          <div id="item_list">
  	        {% for value in dataArr %}
  	          <div class="item">
                <ul>
                  <li class="name"><a href="{{constant('shopping\\Bootstrap::ENTRY_URL')}}detail.php?item_id={{value.item_id}}">
  {{value.item_name}}</a></li>

                  <li class="price">&yen;{{value.price|number_format(0,'.',',')}}</li>
                  <li class="image"><a href="{{constant('shopping\\Bootstrap::ENTRY_URL')}}detail.php?item_id={{value.item_id}}"><img src="{{constant('shopping\\Bootstrap::ENTRY_URL')}}images/{{value.image}}" alt="{{value.item_name}}"></a></li>
                  <li class="detail"><a href="{{constant('shopping\\Bootstrap::ENTRY_URL')}}detail.php?item_id={{value.item_id}}">詳細</a></li>     
               </ul>
            </div>
        {% endfor %}
      </div>
    </div>
</body>
</html>
